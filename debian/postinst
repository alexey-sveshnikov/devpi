#!/bin/bash
# postinst script for devpi
#
# see: dh_installdeb(1)

set -ex

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
        if ! getent passwd devpi; then
            echo "Creating devpi user.."
            useradd --home-dir /var/lib/devpi-server --no-create-home --shell /bin/false devpi
        fi

        ve_dir='/var/lib/devpi-virtualenv'

        if [[ -d $ve_dir && -f $ve_dir/finished ]]; then
            echo "Virtualenv is OK";
        elif [[ -d $ve_dir ]]; then
            echo "Found unfinished virtualenv, going to remove it"
            rm -rf $ve_dir
        fi

        if [[ ! -d $ve_dir ]]; then
            echo "Crating new virtualenv (ver. $md5)"
            mkdir $ve_dir
            virtualenv $ve_dir

            pip_cache='/var/lib/pip-cache'
            source $ve_dir/bin/activate
            #pip install --download-cache=$pip_cache -U setuptools
            #pip install --download-cache=$pip_cache -U pip
            #pip install --download-cache=$pip_cache -U distribute
            pip install --download-cache=$pip_cache -U devpi
            touch $ve_dir/finished
        fi

        chown -R devpi:devpi /var/lib/devpi-server

        supervisorctl update
        supervisorctl restart devpi-server
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

